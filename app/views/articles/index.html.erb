<h1>Wiki v.1.1.4</h1>

<h2>Welcome back. This is your list of <strong>articles</strong>  </h2>

<hr>
 <h2> <%= link_to 'New article', new_article_path %> </h2>
<hr>

<% @articles.each do |article| %>
  <h2><%= article.id %> -- <%= @markdown.render(article.title).html_safe %></h2>
  <p> <strong>Goal-Content:</strong> <%= @markdown.render(article.content).html_safe %></p>
  <p> <%= link_to 'Show', article_path(article) %> ||  <%= link_to 'Edit', edit_article_path(article) %> || <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Please Authorize Data Purge"} %> </p>
  <p></p>
<% end %>

